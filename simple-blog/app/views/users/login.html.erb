<!-- simple user login form -->
<%= form_for :session, url: {  action: 'create' } do |s| %> 

	<p>
		<%= s.label :username	%> 			<br />
		<%= s.text_field :username	%>
	</p>
	<p>
		<%= s.label :password	%> 			<br />
		<%= s.password_field :password %>
	</p>
	<p>
		<%= s.submit %> 
	
	</p>

<% end %>