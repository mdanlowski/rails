<div class="WRAPPER">

	<!-- <h1 class="text-center">ðŸ‘½</h1> -->

	<% @posts.reverse_each do |p| %>
	<hr />
	<div class="post index-post">
		<h3><%= p.title %></h3>
		<!-- @TODO jakiÅ› lepszy sposÃ³b na ograniczanie treÅ›ci posta na gÅ‚Ã³wnej -->
		<p><%= (p.body.length > 400) ? simple_format(p.body)[0,400]+'...'+simple_format(' <i>(click below for full content)</i>') : simple_format(p.body) %></p>
		<sub><a class="" href="/posts/<%= p.id %>">See whole post / details...</a></sub>
		<p class="text-right">Written by: <span class="index-username"><%= User.find(p.user_id).username %></span> at: 
		<%= p.created_at %></p>
		<% if p.created_at.to_s != p.updated_at.to_s %>
			<p class="text-right"><sup>
				Last edit: <%= p.updated_at %></p>
			</sup></p>
		<% end -%>
	</div>
	<% end %>

	<!-- .gsub(/(?:\n\r?|\r\n?)/, '<br>') -->
</div>