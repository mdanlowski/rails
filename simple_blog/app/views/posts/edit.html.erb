<header class="newpost-header">
	<h1 class="text-center">Edit an existing Post</h1>
<h1 class="text-center">_</h1>

	<div class="errors">
		<% if flash[:new_post_errors] %>
		Please correct following:
		<ul>
			<% flash[:new_post_errors].each do |e| %>
				<li> <%= e %> </li>
			<% end %>
		</ul>
		<% end %>
	</div>

	<div class="text-center">
		<%= form_for :post, url: { action: 'create' } do |p| %>
			<div class="field post-title-field"> 
				<%= p.label :title %>
				<%= p.text_field :title,  placeholder: 'Title of your post' %>
			</div>

			<div class="field post-body-field">
				<%= p.label :body %>
				<%= p.text_area :body, placeholder: 'The content of your post...' %>
			</div>

			<div class="field post-attachment-field">
				<%= p.label :attachments %>

			</div>


			<div class="post-finalize"> <%= p.submit "Submit the Post", class: "btn btn-success"%>
			</div>

		<% end %>
			<!-- <input type="file" name="attach"> -->
		
	</div>

</header>

<h1 class="text-center">_</h1>

<%  %>