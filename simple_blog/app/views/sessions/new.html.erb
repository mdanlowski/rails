<h1>Sessions#new - Login Page</h1>

<p>
	<h3>Please use username and password to sign in.</h3>	
</p>

<div class="errors">
	<% if flash[:login_errors] %>
		<% flash[:login_errors].each do |e| %>
			<p> <%= e %> </p>
		<% end %>
	<% end %>
</div>

<%= form_for :session, url: { action: 'create' } do |s| %>
	<p>
		<%= s.label :username %>
		<br />
		<%= s.text_field :username, :autofocus => true, placeholder: 'Username'  %>
	</p>
	<p>
		<%= s.label :password %>
		<br />
		<%= s.password_field :password, placeholder: 'Password'  %>
	</p>
	<p>
		<%= s.submit 'Sign in' %>
	</p>

<% end %>
